<h4><class="font-weight-normal">ジャンル一覧・追加</h4>

<%= form_with model: @genre , url: admin_genres_create_path  do |f| %>

 <div class="field">
    <%= f.label :name,"ジャンル名" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "email" %>
 </div>

   <%= f.submit "新規登録" %>


<% end %>

<table class="table table-hover ">
      <thead>
       <tr>
        <th></th>
        <th>ジャンル</th>
        <th colspan="2"></th>
       </tr>
      </thead>

      <tbody>
       <% @genres.each do |genre| %>
        <tr>
         <td><%= genre.name %></td>
         <td><%=link_to "編集する",edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>

        </tr>

       <% end %>


      </tbody>
    </table>