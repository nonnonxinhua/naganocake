<h2>商品編集</h2>

<%= form_with model: @item , url: admin_items_path  do |f| %>

  <div class="field">
   <%= f.label :商品画像 %>
   <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
   </div>

  <div class="field">
    <%= f.label :商品名 %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :商品説明 %>
    <%= f.text_area :introduction, autocomplete: "current-password" %>
  </div>

  <div class="field">
  <%= f.label :ブランド %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :税抜価格 %>
    <%= f.text_field :price, autocomplete: "current-password" %>円
  </div>

  <div class="field">
  <%= f.radio_button :is_active, :true %>
  <%= f.label :is_active, "販売中", value: :true %>
  <%= f.radio_button :is_active, :false %>
  <%= f.label :is_active, "販売停止中", value: :false %>
  </div>

   <%= f.submit "変更を保存" %>
 <% end %>