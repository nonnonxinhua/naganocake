
<div class="container">
<h2><class="font-weight-normal">商品一覧</h2>
 <div class="row">
  <% @items.each do |item| %>
   <div class="col-3">
    <%= link_to item_path(item.id) do %>
    <%= image_tag item.get_image(100,100), class:"card-img-top"; %>
    <p><%= link_to item.name,item_path(item.id) %></p>
    <% end %>
    ¥<%= item.price %>

   </div>
  <% end %>
  <%= paginate @items %>
 </div>
</div>




