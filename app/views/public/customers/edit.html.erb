<p><class="font-weight-normal">会員情報編集</p>

<%= form_with model: @customer, url: customer_path(@customer) do |f| %>

  <div class="field">
    <%= f.label :last_name,"(姓)" %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :first_name,"(名)" %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana,"（セイ）"%><br />
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana,"（メイ）" %><br />
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :email,"メールアドレス"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

   <div class="field">
    <%= f.label :postal_code, "(郵便番号)" %><br />
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address,"住所" %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :telphone_number,"電話番号（ハイフン不要）" %><br />
    <%= f.text_field :telphone_number  %>
  </div>



 <%= f.submit "編集内容を保存" %>
 <%= link_to "退会する", customers_withdraw_path,class:"btn btn-Primary" %>

<% end %>


